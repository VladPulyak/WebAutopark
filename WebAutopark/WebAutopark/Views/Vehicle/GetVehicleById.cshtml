@model VehicleGetByIdViewModel


<div>
    <h1 class="d-flex justify-content-center" style="font-style: italic;font-size: 46px;color: rgb(1,1,1);margin-bottom: 14px;">Info about @Model.Model, @Model.Year year with Registration number @Model.RegistrationNumber</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Vehicle Id</th>
            <th>VehicleType Name</th>
            <th>Model</th>
            <th>Registration Number</th>
            <th>Weight</th>
            <th>Year</th>
            <th>Mileage</th>
            <th>Color</th>
            <th>Fuel Consumption</th>
            <th>Tank Capacity</th>
            <th>Tax Per Month</th>
            <th>Max Kilometers On Tank</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.VehicleId</td>
            <td>@Model.VehicleTypeName</td>
            <td>@Model.Model</td>
            <td>@Model.RegistrationNumber</td>
            <td>@Model.Weight</td>
            <td>@Model.Year</td>
            <td>@Model.Mileage</td>
            <td>@Model.Color</td>
            <td>@Model.FuelConsumption</td>
            <td>@Model.TankCapacity</td>
            <td>@Model.TaxPerMonth</td>
            <td>@Model.MaxKilometersOnTank</td>
        </tr>
    </tbody>
</table>