@model Orders
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>Untitled</title>
</head>

<body class="BGAddVehicle">
    <div>
        <h1 class="d-flex justify-content-center" style="font-style: italic;font-size: 46px;color: rgb(0,0,0);margin-bottom: 14px;">Add Order</h1>
    </div>
    <form class="justify-content-center" method="post">
        <div class="d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 d-flex justify-content-end">
                        <div style="margin-left: 11px;margin-bottom: 8px;">
                            <label class="form-label" style="margin-right: 16px;padding: 3px;padding-top: 2px;padding-right: 2px;padding-bottom: 2px;padding-left: 2px;border-radius: 4px;border-width: 1px;font-size: 30px;font-style: italic;color: rgb(0,0,0);">Vehicle</label>
                            <select asp-for="VehicleId" asp-items="@ViewBag.ListWithVehicles" class="form-control" style="border-radius: 7px;border-width: 1px;font-size: 30px;width: 324px;"></select>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex justify-content-start">
                        <div style="margin-left: 11px;margin-bottom: 8px;">
                            <label class="form-label" style="margin-right: 16px;padding: 3px;padding-top: 2px;padding-right: 2px;padding-bottom: 2px;padding-left: 2px;border-radius: 4px;border-width: 1px;font-size: 30px;font-style: italic;color: rgb(0,0,0);" for="ComponentName">Component</label>
                            <select class="form-control" id="ComponentName" name="ComponentName" style="border-radius: 7px;border-width: 1px;font-size: 30px;width: 324px;" value="none">
                                @foreach (var name in ViewBag.ListWithComponents as List<string>)
                                {
                                    <option>@name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div style="margin-left: 11px;margin-bottom: 8px;color: rgb(48,242,127);"><label class="form-label" style="margin-right: 16px;padding: 3px;padding-top: 2px;padding-right: 2px;padding-bottom: 2px;padding-left: 2px;border-radius: 4px;border-width: 1px;font-size: 30px;font-style: italic;color: rgb(0,0,0);" for="Quantity">Quantity</label><input id="Quantity" class="form-control" type="text" style="width: 324px;font-size: 30px;border-radius: 7px;" required name="Quantity" /></div>
        </div>
        <div class="d-flex justify-content-center"><button class="btn btn-primary" type="submit" style="margin: 5px;font-size: 25px;margin-top: 10px;background: rgb(68,113,183);border-color: rgb(68,113,183);border-radius: 7px;">Enter</button></div>
    </form>
</body>
</html>