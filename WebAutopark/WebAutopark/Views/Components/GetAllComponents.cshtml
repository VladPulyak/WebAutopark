@model IEnumerable<Components>

<body>
    <div>
        <h1 class="d-flex justify-content-center" style="font-style: italic;font-size: 46px;color: rgb(0,0,0);margin-bottom: 14px;">Components Information</h1>
    </div>
    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col-md-6">
                <div class="d-flex justify-content-center" style="margin: 5px;">
                    <button class="btn btn-success" type="submit">
                        <a asp-action="AddComponent" asp-controller="Components" style="text-decoration: none; color: #fff; font-size:20px;">Add Component</a>
                    </button>
                </div>
            </div>
            <div class="col-md-6">
                <form asp-action="GetComponentById" asp-controller="Components" method="post">
                    <div class="d-flex justify-content-center" style="margin: 5px;">
                        <label class="form-label" style="font-size: 25px;">ComponentId</label>
                        <input name="componentId" id="componentId" type="number" style="width: 90px;margin-left: 6px;margin-right: 6px;border-radius: 9px;border-width: 3px;font-size: 25px;text-align: center;" min="1" />
                        <button class="btn btn-info" type="submit" style="font-size: 20px;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div>
        <div class="table-responsive" style="border-radius: 21px; border-width: 2px;">
            <table class="table">
                <thead>
                    <tr>
                        <th>ComponentId</th>
                        <th>Name</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var component in Model)
                    {
                        <tr>
                            <td>@component.ComponentId</td>
                            <td>@component.Name</td>>
                            <td>
                                <button class="btn btn-danger" type="submit">
                                    @Html.ActionLink("Delete","DeleteComponentById","Components",new{component.ComponentId}, new {style = "text-decoration: none; color: #fff"})
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-primary" type="submit">
                                    @Html.ActionLink("Change","UpdateComponent","Components",new{component.ComponentId}, new {style = "text-decoration: none; color: #fff"})
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>