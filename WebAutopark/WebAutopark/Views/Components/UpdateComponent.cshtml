@model Components
<body class="BGUpdateVehicle">
    <div>
        <div>
            <h1 class="d-flex justify-content-center" style="font-style: italic;font-size: 46px;color: rgb(0,0,0);margin-bottom: 14px;">Change Component</h1>
        </div>
        <form class="justify-content-center" method="post">
            <div class="d-flex justify-content-center align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 d-flex justify-content-end">
                            <div style="margin-left: 11px;margin-bottom: 8px;color: rgb(48,242,127);"><label class="form-label" style="margin-right: 16px;padding: 3px;padding-top: 2px;padding-right: 2px;padding-bottom: 2px;padding-left: 2px;border-radius: 4px;border-width: 1px;font-size: 30px;font-style: italic;color: rgb(0,0,0);" for="Name">Component Name</label><input id="Name" value="@Model.Name" class="form-control" type="text" style="border-radius: 7px;border-width: 1px;font-size: 30px;width: 324px;" required name="Name" /></div>
                        </div>
                    </div>                    
                </div>
            </div>
            <div class="d-flex justify-content-center"><button class="btn btn-primary" type="submit" style="margin: 5px;font-size: 25px;margin-top: 10px;background: rgb(68,113,183);border-color: rgb(68,113,183);border-radius: 7px;">Update</button></div>
        </form>
    </div>
</body>